<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

  <entity
          repository-class="DashboardBundle\Repository\CustomerRepository"
          name="DashboardBundle\Entity\Customer"
          table="customers">

    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>

    <field name="name" type="string" column="name" length="255"/>
    <field name="avatar" type="string" column="avatar" length="255"/>
    <field name="address" type="string" column="address" length="255"/>
    <field name="socialType" type="string" column="social_type" length="255"/>
    <field name="socialId" type="string" column="social_id" length="255"/>
    <field name="smallAvatar" type="string" column="smallAvatar" length="255"/>

    <one-to-many field="photos" target-entity="DashboardBundle\Entity\CustomerPhoto" mapped-by="customer" />
    <one-to-many field="salons" target-entity="DashboardBundle\Entity\Salon" mapped-by="customer" />
    <one-to-many field="feedbacks" target-entity="DashboardBundle\Entity\Feedback" mapped-by="customer" />
    <one-to-many field="comments" target-entity="DashboardBundle\Entity\Feedback" mapped-by="customer" />
    <many-to-many field="bookmarks" mapped-by="followers" target-entity="DashboardBundle\Entity\Salon" />

    <many-to-many field="subscriptions" mapped-by="subscribers" target-entity="DashboardBundle\Entity\Customer" />
    <many-to-many field="subscribers" target-entity="DashboardBundle\Entity\Customer">
        <join-table name="subscriptions">
            <join-columns>
                <join-column name="customer_id" referenced-column-name="id" />
            </join-columns>
            <inverse-join-columns>
                <join-column name="follower_id" referenced-column-name="id" />
            </inverse-join-columns>
        </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
